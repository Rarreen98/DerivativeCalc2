		lblNumerator.setHorizontalAlignment(SwingConstants.RIGHT);
		lblNumerator.setFont(new Font("Tahoma", Font.PLAIN, 18));
		lblNumerator.setBounds(20, 16, 90, 30);
		screen.add(lblNumerator);
		
		JLabel lblDenominator = new JLabel("Denominator");
		lblDenominator.setHorizontalAlignment(SwingConstants.RIGHT);
		lblDenominator.setFont(new Font("Tahoma", Font.PLAIN, 18));
		lblDenominator.setBounds(9, 88, 101, 30);
		screen.add(lblDenominator);
		
