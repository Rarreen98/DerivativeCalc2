		numerator.setHorizontalAlignment(SwingConstants.CENTER);
		numerator.setBounds(120, 11, 504, 46);
		numerator.setColumns(10);
		screen.add(numerator);
		
		denominator = new JTextField();
		denominator.setFont(new Font("Tahoma", Font.PLAIN, 36));
		denominator.setHorizontalAlignment(SwingConstants.CENTER);
		denominator.setText("1");
		denominator.setBounds(120, 83, 504, 46);
		screen.add(denominator);
		denominator.setColumns(10);
		
